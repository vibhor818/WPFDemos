<Window x:Class="DbDemo.CustomDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DbDemo"
        mc:Ignorable="d"
        Title="CustomDialog" Height="250" Width="400">
    <Canvas Margin="10">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="This is custom dialog" FontSize="16" TextAlignment="Center" Margin="10"></TextBlock>
            <Button Content="Close" Width="100" HorizontalAlignment="Center" Click="Button_Click"></Button>
        </StackPanel>
        
    </Canvas>
</Window>
