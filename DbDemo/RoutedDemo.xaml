<Window x:Class="DbDemo.RoutedDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DbDemo"
        mc:Ignorable="d"
        Title="RoutedDemo" Height="450" Width="800">
    <Grid MouseDown="Grid_MouseDown">
        <StackPanel MouseDown="StackPanel_MouseDown" Margin="20">
            <TextBlock Text="Click Below:" FontSize="16"/>
            <Button Content="Click Me" Width="100" Height="40" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
