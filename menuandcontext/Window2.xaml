<Window x:Class="menuandcontext.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:menuandcontext"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800">
    <Grid Margin="10">
        <DockPanel>
            <StackPanel Orientation="Horizontal"
                        DockPanel.Dock="Top" Margin="0,0,0,10">
                <Button Content="Open File" Width="100" Margin="5"
                        Click="OpenFileButton_Click" />
                <Button Content="Save File" Width="100" Margin="5"
                        Click="SaveFileButton_Click" />
            </StackPanel>
            <RichTextBox Name="MainRichTextBox" 
                         VerticalScrollBarVisibility="Auto" 
                         AcceptsTab="True" />
        </DockPanel>
    </Grid>
</Window>
